<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.climate.mirage.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application android:allowBackup="true"
                 android:label="@string/mirage_app_name"
                 android:icon="@drawable/mirage_ic_launcher"
                 android:theme="@style/MirageAppTheme"
                 tools:replace="label, icon">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="Simple Load Example" android:name=".SimpleLoadActivity" />
        <activity android:label="Simple List" android:name=".ListActivity" />
        <activity android:label="Drawable Load" android:name=".DrawableLoadActivity" />
        <activity android:label="TextView Drawable Sample" android:name=".TextViewActivity" />
        <activity android:label="Custom Lifecycle" android:name=".CustomLifecycleActivity" />
        <activity android:label="Custom Drawable" android:name=".CustomDrawableActivity" />
        <activity android:label="Custom Bitmap" android:name=".CustomBitmapActivity" />
        <activity android:label="Load and Cancel" android:name=".LoadAndCancelActivity" />
        <activity android:label="Load from Content Resolver" android:name=".ContentResolverLoadActivity" />
        <activity android:label="Load from File" android:name=".FileLoadActivity" />
        <activity android:label="Download Only" android:name=".DownloadOnlyActivity" />
        <activity android:label="Sample Offline Sync" android:name=".SampleOfflineSyncActivity" />
        <activity android:label="Mirage Settings" android:name=".SettingsActivity" />

    </application>

</manifest>
